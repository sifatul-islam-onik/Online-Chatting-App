<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_settings"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/btnSettingUpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:backgroundTint="@color/background"
            android:drawableLeft="@drawable/icon_person"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Update Profile Info"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/btnSettingChangePassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:backgroundTint="@color/background"
            android:drawableLeft="@drawable/icon_password"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Change Password"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/btnSettingChangeEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:backgroundTint="@color/background"
            android:drawableLeft="@drawable/icon_email"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Change Email Address"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/btnSettingAbout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:backgroundTint="@color/background"
            android:drawableLeft="@drawable/icon_about"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Credits"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/btnSettingDelete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:backgroundTint="@color/background"
            android:drawableLeft="@drawable/icon_delete"
            android:drawableTint="@android:color/holo_red_light"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Delete Account"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/btnSettingLogout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:backgroundTint="@color/background"
            android:drawableLeft="@drawable/icon_logout"
            android:drawableTint="@android:color/holo_red_light"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Logout"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
    </LinearLayout>
</FrameLayout>